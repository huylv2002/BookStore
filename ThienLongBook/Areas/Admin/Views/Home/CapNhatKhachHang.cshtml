                            <th scope="col">Email</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var ind in TempData["KhachHang"] as List<KhachHang>)
                        {
                        <tr>
                            <td><input class="form-check-input" type="checkbox"></td>
                            <td>@ind.maKH</td>
                            <td>@ind.hoTenKH</td>
                            <td>@ind.diaChiKH</td>
                            <td>@ind.dienThoaiKH</td>
                            <td>@ind.accountKH</td>
                            <td>@ind.passwordKH</td>
                            <td>@Html.FormatValue(ind.ngaySinh, "{0:dd/MM/yyyy}")</td>
                            @if (ind.gioiTinh == true)
                            {
                                <td>Nam</td>
                            }
                            else
                            {
                                <td>NỮ</td>
                            }
                            <td>@ind.email</td>


